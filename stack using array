#include<stdio.h>
#define size (10)
void push(int);
void pop();
void display();
int main()
{
	int value,choice;
	while(1)
	{
		printf("\n\n****menu****\n");
		printf("%push \n2.pop \n.display \n4.exit");
		printf("\n enter your choice");
		scanf("%d",&choice);
		switch(choice)
		{
		  case 1:printf("enter the value to be insert:");
		  scanf("%d",&value);
		  push (value);
		  break;
		  case 2:pop();
		  break;
		  case 3:display ();
		  break;
		  case 4:exit();
		  default:printf("\n wrong selection!!! try again!!!");
	}
}
}
{
void push(int value)
	if(top==size-1)
	printf("\n stack is full !! insertion is not possible!!!");
	else
	{
		top++;
		stack[top]=value;
		printf("\n insertion success!!!");
	}
}
void pop()
{
	if(top==-1)
	printf("\nstack is empty !!! deletion is not possible!!!");
	else
	{
		printf("\n deleted:%d",stack[top]);
		top--;
	}
}
void display ()
{
	if(top==-1)
	printf("\n stack is empty!!!");
	else
	{
		int i;
		printyf("\n stack element are:\n");
		for(i=top;i>=0;i--)
		printf("%d\n",stack[i]);
	}
}
	

	

		
	
